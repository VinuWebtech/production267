<?xml version="1.0"?>
<config>
    <modules>
        <Sz_Vendor>
            <version>1.0.4</version>
        </Sz_Vendor>
    </modules>
	<default>
		<vendor>
			<vendor_options>
                <percent><![CDATA[20]]></percent>
                <partner_approval><![CDATA[1]]></partner_approval>
                <product_approval><![CDATA[1]]></product_approval>
				<allow_for_vendor><![CDATA[simple,virtual,downloadable,configurable]]></allow_for_vendor>
            </vendor_options>
		</vendor>
	</default>
    <frontend>
		<secure_url>
			<vendor>/vendor/vendoraccount/</vendor>
		</secure_url>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>Sz_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
		<translate>
			<modules>
				<sz_vendor>
					<files>
						<vendor>Sz_Vendor.csv</vendor>
					</files>
				</sz_vendor>
			</modules>
		</translate>
    </frontend>
    <admin>
        <routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Sz_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
    </adminhtml>   
    <global>
		<events>
			<catalog_product_delete_after>
                <observers>
                   <Sz_Vendor_Model_Observer>
                      <type>singleton</type>
                      <class>Sz_Vendor_Model_Observer</class>
                      <method>DeleteProduct</method>
                   </Sz_Vendor_Model_Observer>
               </observers>
            </catalog_product_delete_after>
			<customer_register_success>
				<observers>
                   <Sz_Vendor_Model_Observer>
                      <type>singleton</type>
						<class>Sz_Vendor_Model_Observer</class>
						<method>CustomerRegister</method>
                   </Sz_Vendor_Model_Observer>
               </observers>
			</customer_register_success>
			<customer_delete_commit_after>
				<observers>
					<Sz_Vendor_Model_Observer>
						<class>Sz_Vendor_Model_Observer</class>
						<method>deleteCustomer</method>
					</Sz_Vendor_Model_Observer>
				</observers>
			</customer_delete_commit_after>
			<sales_order_place_after>
			  <observers>
			   <Sz_Vendor_Model_Observer>
			    <type>singleton</type>
			     <class>Sz_Vendor_Model_Observer</class>
			      <method>afterPlaceOrder</method>
			   </Sz_Vendor_Model_Observer>
			  </observers>
			</sales_order_place_after>
			
			<sales_order_invoice_save_after>
				<observers>
					<Sz_Vendor_Model_Observer>
						<class>Sz_Vendor_Model_Observer</class>
						<method>checkInvoiceSubmit</method>
					</Sz_Vendor_Model_Observer>
				</observers>
			</sales_order_invoice_save_after>
			<adminhtml_customer_save_after>
				<observers>
					<Sz_Vendor_Model_Observer>
						<type>singleton</type>
						<class>Sz_Vendor_Model_Observer</class>
						<method>afterSaveCustomer</method>
					</Sz_Vendor_Model_Observer>
               </observers>
			</adminhtml_customer_save_after>
			<sales_order_save_commit_after>
                <observers>
                    <Sz_Vendor_Model_Observer>
                        <class>Sz_Vendor_Model_Observer</class>
                        <method>commissionCalculationOnComplete</method>
                    </Sz_Vendor_Model_Observer>
                </observers>
            </sales_order_save_commit_after>
		</events>
		<template>
			<email>
				<adminnotifymoney>
					<label>Admin Notify For Credit</label>
					<file>vendorpartner/notifyadminformoney.html</file>
					<type>html</type>
				</adminnotifymoney>
				<partnerrequest>
					<label>Partner Request</label>
					<file>vendorpartner/partnerrequest.html</file>
					<type>html</type>
				</partnerrequest>
				<partnerapprove>
					<label>Partner Approved</label>
					<file>vendorpartner/partnerapprove.html</file>
					<type>html</type>
				</partnerapprove>
				<partnerdisapprove>
					<label>Partner Disapprove</label>
					<file>vendorpartner/partnerdisapprove.html</file>
					<type>html</type>
				</partnerdisapprove>
				<partnerdeny>
					<label>Partner Deny</label>
					<file>vendorpartner/denypartnermail.html</file>
					<type>html</type>
				</partnerdeny>
				<productdeny>
					<label>Product Deny</label>
					<file>vendorpartner/productdenymail.html</file>
					<type>html</type>
				</productdeny>
				<partnercreditinfo>
					<label>partner Notify for Credit</label>
					<file>vendorpartner/partnercreditinfo.html</file>
					<type>html</type>
				</partnercreditinfo>
				<approveproduct>
					<label>Approve My Product</label>
					<file>vendorpartner/admininformnewpro.html</file>
					<type>html</type>
				</approveproduct>
				<customerpartner_email_template>
					<label>Admin mail to check that some product is sold</label>
					<file>vendorpartner/customer_partner.html</file>
					<type>html</type>
				</customerpartner_email_template>
				<customerpartner_email>
					<label>Notify Partner when its product sold</label>
					<file>vendorpartner/notifycheckoutpartner.html</file>
					<type>html</type>
				</customerpartner_email>
				<requesttobecomepartner_email>
					<label>Notify Admin to make me partner</label>
					<file>vendorpartner/szcustomerpartnewreqest.html</file>
					<type>html</type>
				</requesttobecomepartner_email>
				<querypartner_email>
					<label>Ask question from partner for its particular product</label>
					<file>vendorpartner/szquerypartneremail.html</file>
					<type>html</type>
				</querypartner_email>
				<askquerypartner_email>
					<label>Ask question from partner</label>
					<file>vendorpartner/askquerypartneremail.html</file>
					<type>html</type>
				</askquerypartner_email>
                <fileuploadnotification>
                    <label>Ask question from admin by vendor</label>
                    <file>vendorpartner/fileuploadnotification.html</file>
                    <type>html</type>
                </fileuploadnotification>
				<queryadminemail>
					<label>Ask question from admin by vendor</label>
					<file>vendorpartner/szqueryadminemail.html</file>
					<type>html</type>
				</queryadminemail>
				<whenproductapproved>
					<label>When the product is Approved mail send to partner</label>
					<file>vendorpartner/admininapprovedit.html</file>
					<type>html</type>
				</whenproductapproved>
				<orderinvoice>
					<label>When invoice is created for an order</label>
					<file>vendorpartner/partener_order_invoice.html</file>
					<type>html</type>
				</orderinvoice>	
				<szorderinvoice>
					<label>When invoice is created for an order</label>
					<file>vendorpartner/sz_order_invoice.html</file>
					<type>html</type>
				</szorderinvoice>
				<vendortransactionmail>
					<label>When transaction is created by for vendor's order</label>
					<file>vendorpartner/vendortransactionmail.html</file>
					<type>html</type>
				</vendortransactionmail>
			</email>			
		</template>
        <models>
            <vendor>
                <class>Sz_Vendor_Model</class>
                <resourceModel>vendor_mysql4</resourceModel>
            </vendor>
            <vendor_mysql4>
                <class>Sz_Vendor_Model_Mysql4</class>
                <entities>
                    <product>
                        <table>vendor_product</table>
                    </product>
					<userprofile> 
						<table>vendor_userdata</table>
					</userprofile>
					<feedback> 
						<table>vendor_datafeedback</table>
					</feedback>
					<feedbackcount> 
						<table>vendor_feedbackcount</table>
					</feedbackcount>
					<saleperpartner> 
						<table>vendor_saleperpartner</table>
					</saleperpartner>
					<saleslist> 
						<table>vendor_saleslist</table>
					</saleslist>
                    <uploader>
                        <table>vendor_product_files</table>
                    </uploader>
					<transaction>
						<table>vendor_vendortransaction</table>
					</transaction>
                </entities>
            </vendor_mysql4>
        </models>
        <resources>
            <vendor_setup>
                <setup>
                    <module>Sz_Vendor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
        <blocks>
			<adminhtml>
				<rewrite>
					<customer_edit_tabs>Sz_Vendor_Block_Adminhtml_Customer_Edit_Tabs</customer_edit_tabs>
                </rewrite>
			</adminhtml>
            <vendor>
                <class>Sz_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
            <vendor>
                <class>Sz_Vendor_Helper</class>
            </vendor>
        </helpers>
    </global>
</config>
